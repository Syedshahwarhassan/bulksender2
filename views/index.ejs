<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Security-Policy" content="
    default-src 'self'; 
    script-src 'self' https://vercel.live https://cdn.jsdelivr.net https://unpkg.com 'unsafe-inline'; 
    style-src 'self' https://unpkg.com https://cdn.jsdelivr.net https://fonts.googleapis.com; 
    font-src 'self' https://fonts.gstatic.com;">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Bulk Sender</title>
    
    <script src="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css" rel="stylesheet">
    
    <link rel="stylesheet" href="/style/index.css">

</head>
<body>

    <div>
        <h1>Email Bulk Sender</h1>

        <div  id="emailForm" method="get">
            <label for="subject">Enter Subject:</label>
            <input type="text" id="subject" name="subject" required placeholder="Enter your subject">

            <label for="content">Email Content:</label>
            <div id="editor">
              
              <p>Email bulk Sender developed by shahwar hassan</p>
            </div>

            <button onclick="submithandle()" type="submit">Submit</button>
          </div>
    </div>

    <script>
       function submithandle() {
            var subject = document.getElementById('subject').value;
            var content = quill.root.innerHTML;
           if(!subject){
             alert('Please enter subject');
             return;
           }else{
            fetch('/send',{
              method: 'POST',
              headers: {'Content-Type': 'application/json'},
              body: JSON.stringify({subject, content})
            }).then(async(res)=>{
              if(res.ok) {
                alert('Email sent successfully');
              }
              throw new Error('Network response was not ok');
            })
           }
          }
        const quill = new Quill('#editor', {
            theme: 'snow'
        });
    </script>
</body>
</html>
